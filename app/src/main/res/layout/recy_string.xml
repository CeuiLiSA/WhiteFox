<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/playlist_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_folder_24"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:layout_marginBottom="@dimen/four_dp"
            android:transitionName="sharedView" />


        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="15sp"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/four_dp"
            android:layout_marginEnd="@dimen/six_teen_dp"
            android:layout_toEndOf="@+id/playlist_photo"
            android:textColor="#333333"
            android:transitionName="sharedText" />

        <TextView
            android:id="@+id/song_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/six_teen_dp"
            android:layout_alignBottom="@+id/playlist_photo"
            android:layout_marginTop="@dimen/six_dp"
            android:layout_marginBottom="@dimen/four_dp"
            android:layout_toEndOf="@+id/playlist_photo"
            android:textSize="13sp" />

    </RelativeLayout>
</layout>