<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="@dimen/playlist_horizontal_size"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/playlist_photo"
            android:layout_width="@dimen/playlist_horizontal_size"
            app:riv_corner_radius="@dimen/eight_dp"
            android:layout_height="@dimen/playlist_horizontal_size"
            android:transitionName="sharedView" />


        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="15sp"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/six_dp"
            android:textColor="#fefcff"
            android:transitionName="sharedText" />

    </LinearLayout>
</layout>